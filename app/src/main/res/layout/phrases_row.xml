<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_weight="2"
    android:layout_height="wrap_content"
    android:orientation="vertical">

        <View
            android:layout_width="0px"
            android:layout_height="20px" />

    <TextView
        android:text="homePhraseTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/homePhraseTextView"
        android:textColor="?android:attr/textColorPrimary"
        android:layout_weight="1" />

    <TextView
        android:text="pronounciationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pronounciationTextView"
        android:layout_weight="1"
        android:textColor="?android:attr/textColorPrimary" />

    <TextView
        android:text="travelPhraseTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/travelPhraseTextView"
        android:layout_weight="1"/>

        <View
            android:layout_width="0px"
            android:layout_height="20px" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <View
        android:layout_width="0px"
        android:layout_height="20px"
        android:background="#000000"/>

    <ImageButton
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:scaleType="fitXY"
        android:layout_marginRight="10dp"
        app:srcCompat="@drawable/copy"
        android:background="@android:color/transparent"
        android:id="@+id/copyImageButton"
        android:layout_weight="1" />
    </LinearLayout>

    <View
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:background="#000000"/>
</LinearLayout>